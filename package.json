{
  "name": "mock-grunt",
  "version": "0.0.2",
  "description": "Mock grunt runtime to easily unit-test tasks",
  "main": "index.js",
  "scripts": {
    "test": "mocha",
    "testwatch": "mocha --watch",
    "cover": "istanbul cover _mocha",
    "checkVersions": "autochecker 6 5 4 0.12 0.10.44",
    "preversion": "npm run checkVersions",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "grunt",
    "mock",
    "testing",
    "unittests",
    "task"
  ],
  "author": "Ralf Fischer <themakii@gmail.com>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/makii42/mock-grunt.git"
  },
  "devDependencies": {
    "autochecker": "^0.9.2",
    "grunt": "^1.0.1",
    "istanbul": "^0.4.4",
    "mocha": "^5.0.0",
    "sinon": "^3.0.0"
  }
}
